{
  "compilerOptions": {
    "lib": ["ES2018"],
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "target": "ES2020",
    "module": "ES2020",
    "outDir": "./dist/esm",
    "declarationDir": "./dist/esm",
    "moduleResolution": "bundler"
  },
  "include": ["src/**/*.ts"]
}
